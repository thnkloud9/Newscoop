}
function fnLoadContextList(data)
{
    if(data.code == 200) {
        var items = data.items;
        for(i = 0; i < items.length; i++) {
            var item = items[i];
            console.log(item);
            appendItemToContextList(item.articleId, item.date.date, item.title, item.workflowStatus);
